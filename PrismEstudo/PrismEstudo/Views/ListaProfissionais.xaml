<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:bh="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             x:Class="PrismEstudo.Views.ListaProfissionais">

    <ListView ItemsSource="{Binding ListaProfissionais}">
        <ListView.Behaviors>
            <bh:EventToCommandBehavior 
                EventName="ItemTapped" 
                Command="{Binding ItemProfissionalTappedCommand}"
                EventArgsParameterPath="Item"/>
        </ListView.Behaviors>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell ImageSource="{Binding ImagemPerfil}" 
                           Text="{Binding Nome}" 
                           Detail="{Binding Especialidade}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
  
</ContentPage>